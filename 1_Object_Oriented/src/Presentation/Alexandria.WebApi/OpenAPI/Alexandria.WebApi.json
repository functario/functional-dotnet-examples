{
  "openapi": "3.0.1",
  "info": {
    "title": "Alexandria.WebApi | v1",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://localhost"
    }
  ],
  "paths": {
    "/v1/authors": {
      "get": {
        "tags": [
          "Authors"
        ],
        "summary": "Get an Author.",
        "operationId": "GetAuthor",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetAuthorResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "post": {
        "tags": [
          "Authors"
        ],
        "summary": "Add an Author.",
        "operationId": "PostAuthor",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddAuthorRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddAuthorResponse"
                }
              }
            }
          },
          "409": {
            "description": "Conflict",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthorAlreadyExistsResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/accounts": {
      "get": {
        "tags": [
          "Accounts"
        ],
        "summary": "Get an Account.",
        "operationId": "GetAccount",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "uint64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetAccountResponse"
                }
              }
            }
          },
          "204": {
            "description": "No Content"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AddAuthorRequest": {
        "required": [
          "firstName",
          "middleNames",
          "lastName",
          "birthDate"
        ],
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string"
          },
          "middleNames": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "lastName": {
            "type": "string"
          },
          "birthDate": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "AddAuthorResponse": {
        "required": [
          "author"
        ],
        "type": "object",
        "properties": {
          "author": {
            "$ref": "#/components/schemas/Author"
          }
        }
      },
      "Author": {
        "required": [
          "id",
          "firstName",
          "middleNames",
          "lastName",
          "birthDate"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "firstName": {
            "type": "string"
          },
          "middleNames": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "lastName": {
            "type": "string"
          },
          "birthDate": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "AuthorAlreadyExistsResponse": {
        "required": [
          "author"
        ],
        "type": "object",
        "properties": {
          "author": {
            "$ref": "#/components/schemas/Author"
          },
          "message": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "GetAccountResponse": {
        "type": "object",
        "properties": {
          "account": {
            "type": "string"
          }
        }
      },
      "GetAuthorResponse": {
        "required": [
          "author"
        ],
        "type": "object",
        "properties": {
          "author": {
            "$ref": "#/components/schemas/Author"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Authors"
    },
    {
      "name": "Accounts"
    }
  ]
}